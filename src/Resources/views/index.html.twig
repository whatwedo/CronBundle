{% block main %}
    <table class="table datagrid">
        <thead>
        <th class="header-for-field-text text-left" dir="ltr">{{ 'cronjob.name'|trans  }}</th>
        <th class="header-for-field-text text-left" dir="ltr">{{ 'cronjob.isActive'|trans  }}</th>
        <th class="header-for-field-text text-left" dir="ltr">{{ 'cronjob.descripton'|trans  }}</th>
        <th colspan="2" class="header-for-field-text text-left" dir="ltr">{{ 'cronjob.lastExecution'|trans }}</th>
        <th dir="ltr"><span class="sr-only">{{ 'cronjob.actions'|trans }}</span></th>
        </thead>
        <tbody>
        {% for item in list %}
            <tr>
                <td data-label="Name">{{ item.cronjob.name }}</td>
                <td class="field-boolean text-left" data-label="Aktiv">
                    {% if item.cronjob.isActive %}
                        <span class="badge badge-boolean-true">yes</span>
                    {% else %}
                        <span class="badge badge-boolean-false">no</span>
                    {% endif %}
                </td>
                <td data-label="Beschreibung">{{ item.cronjob.description }}</td>
                <td data-label="letzte AusfÃ¼hrung">{% if item.lastExecution %}{{ item.lastExecution.finishedAt|date('d.m.Y H:i') }}{% endif %}</td>
                <td class="actions">
                    <a class="small" id="show-{{ wwd_cron_classFqcn(item.cronjob) }}" href="{{ path('whatwedo_cronjob_show', { 'class': wwd_cron_classFqcn(item.cronjob) }) }}">
                        <i class="action-icon fa fa-eye"></i> show
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}